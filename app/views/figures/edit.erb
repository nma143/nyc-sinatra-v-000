<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label>Name:</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>">

  <label>Titles:</label>
    <% Title.all.each do |title| %>
      <label><%= title.name %></label>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>>
    <% end %>

   <label>Create New Title:</label>
    <input type="text" id="new_title" name="title[name]">


</form>
